{
  "name": "darknode-sol",
  "version": "0.0.3",
  "repository": "https://github.io/renproject/darknode-sol",
  "scripts": {
    "generate": "truffle compile && typechain --target truffle './build/**/*.json'",
    "coverage": "yarn run generate && solidity-coverage",
    "test": "yarn run generate && truffle test",
    "bindings:ts": "truffle compile && typechain --target web3-1.0.0 './build/**/*.json'",
    "bindings:go": "solc --allow-paths . --combined-json bin,abi,userdoc,devdoc,metadata contracts/**/*.sol | abigen -pkg bindings --out bindings.go --abi -",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "prepare": "patch-package",
    "deploy": "truffle migrate --skipDryRun --network $NETWORK",
    "clean-build": "grep -R -l 'networks\": {}' build --exclude-dir=development | xargs rm",
    "verify": "truffle run verify --network $NETWORK"
  },
  "dependencies": {
    "openzeppelin-solidity": "2.3.0",
    "truffle-typings": "^1.0.8",
    "zos": "^2.3.1"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/crypto-js": "^3.1.43",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.0.8",
    "any-promise": "^1.3.0",
    "bignumber.js": "^9.0.0",
    "bn.js": "^4.11.8",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "git://github.com/noiach/chai-bignumber.git#master",
    "coveralls": "^3.0.4",
    "crypto-js": "^3.1.9-1",
    "dotenv": "^8.0.0",
    "eth-gas-reporter": "^0.2.0",
    "ganache-cli": "^6.4.4",
    "js-sha3": "^0.8.0",
    "patch-package": "^6.1.2",
    "postinstall-postinstall": "^2.0.0",
    "solc": "0.5.9",
    "solidity-coverage": "github:rotcivegaf/solidity-coverage#5875f5b7bc74d447f3312c9c0e9fc7814b482477",
    "truffle": "5.0.15",
    "truffle-hdwallet-provider": "1.0.10",
    "truffle-plugin-verify": "^0.2.2",
    "ts-generator": "^0.0.8",
    "ts-node": "^8.2.0",
    "tslint": "^5.17.0",
    "typechain": "^0.3.17",
    "typescript": "^3.5.2",
    "underscore": "^1.9.1",
    "web3": "^1.0.0-beta.52",
    "web3-core": "^1.0.0-beta.52",
    "web3-eth-contract": "^1.0.0-beta.52",
    "web3-providers": "^1.0.0-beta.52"
  },
  "resolutions": {
    "solc": "0.5.9",
    "solidity-coverage": "github:rotcivegaf/solidity-coverage#5875f5b7bc74d447f3312c9c0e9fc7814b482477"
  }
}
