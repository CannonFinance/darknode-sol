{
  "name": "darknode-sol",
  "version": "0.0.3",
  "repository": "https://github.io/renproject/darknode-sol",
  "scripts": {
    "generate": "truffle compile && typechain --target truffle './build/**/*.json'",
    "coverage": "yarn run generate && solidity-coverage",
    "test": "yarn run generate && truffle test",
    "bindings:ts": "truffle compile && typechain --target web3-1.0.0 './build/**/*.json'",
    "bindings:go": "solc --allow-paths . --combined-json bin,abi,userdoc,devdoc,metadata contracts/**/*.sol | abigen -pkg bindings --out bindings.go --abi -",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "prepare": "patch-package",
    "deploy": "truffle migrate --skipDryRun --network $NETWORK",
    "clean-build": "grep -R -l 'networks\": {}' build --exclude-dir=development | xargs rm; node build/clean.js",
    "verify": "truffle run verify --network $NETWORK"
  },
  "dependencies": {
    "openzeppelin-solidity": "2.3.0"
  },
  "devDependencies": {
    "@types/chai": "^4.2.0",
    "@types/chai-as-promised": "^7.1.2",
    "@types/ethereumjs-abi": "^0.6.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.7.1",
    "bignumber.js": "^9.0.0",
    "bn.js": "^5.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "chai-bignumber": "github:noiach/chai-bignumber.git#fd75e47b2980c3a151d2a05b070293b18a9bddce",
    "coveralls": "^3.0.6",
    "dotenv": "^8.0.0",
    "eth-gas-reporter": "^0.2.10",
    "ethereumjs-abi": "^0.6.7",
    "ganache-cli": "^6.5.1",
    "hash.js": "^1.1.7",
    "patch-package": "^6.1.2",
    "solc": "0.5.11",
    "solidity-coverage": "^0.6.4",
    "truffle": "5.0.31",
    "truffle-hdwallet-provider": "^1.0.16",
    "truffle-plugin-verify": "^0.3.2",
    "truffle-typings": "^1.0.8",
    "ts-node": "^8.3.0",
    "tslint": "^5.18.0",
    "typechain": "^0.3.19",
    "typescript": "^3.5.3",
    "web3": "^2.0.0-alpha",
    "web3-utils": "^2.0.0-alpha"
  },
  "resolutions": {
    "solc": "0.5.11"
  }
}
